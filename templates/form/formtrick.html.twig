{% extends 'base.html.twig' %}

{% block title %}Creation d'un trick{% endblock %}
{% block javascripts %}
<script src="{{ asset('js/collectionAddVideo.js') }}"></script>
{% endblock %}
{% block body %}
{% include 'header.html.twig' %}
<div class="mx-4">
    <p class="mb-5">Creez un trick ici!</p>
    {{ form_start(form) }}
        <div class="text-danger">{{ form_errors(form) }}</div>
        <div class="form-group">
            <div class="text-danger">{{ form_errors(form.Name) }}</div>
            <label for="exampleInputEmail1">{{ form_label(form.Name) }}:</label>
            <div>{{ form_widget(form.Name, { 'attr': {'class': 'form-control'} }) }}</div>
            <small id="emailHelp" class="form-text text-muted">{{ form_help(form.Name) }}</small>
            
        </div>
        <div class="form-group">
            <div class="text-danger">{{ form_errors(form.description) }}</div>
            <label for="exampleInputEmail1">{{ form_label(form.description) }}:</label>
            <div>{{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}</div>
            <small id="emailHelp" class="form-text text-muted">{{ form_help(form.description) }}</small>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">{{ form_label(form.picture) }}:</label>
            <div>{{ form_widget(form.picture) }}</div>
            <small id="emailHelp" class="form-text text-muted">{{ form_help(form.picture) }}</small>
        </div>
        <div class="form-group">
            <label for="exampleInputEmail1">{{ form_label(form.images) }}:</label>
            <div>{{ form_widget(form.images) }}</div>
            <small id="emailHelp" class="form-text text-muted">{{ form_help(form.images) }}</small>
        </div>
        <ul class="videos" id="video_list" style="list-style:none;" data-prototype="{{ form_widget(form.videos.vars.prototype)|e('html_attr') }}">
            {% for row in form.videos %}
            <li>{{ form_row(row) }}</li>

            {% endfor %}
        </ul>
        <div class="form-group">
            <label for="exampleInputEmail1">{{ form_label(form.categoryId) }}:</label>
            <div>{{ form_widget(form.categoryId, { 'attr': {'class': 'form-control'} }) }}</div>
            <small id="emailHelp" class="form-text text-muted">{{ form_help(form.categoryId) }}</small>
        </div>
        <button class="btn btn-primary button-add-trick" type="submit">Creez</button>
    {{ form_end(form) }}
</div>
{% include 'footer.html.twig' %}
{% endblock %}