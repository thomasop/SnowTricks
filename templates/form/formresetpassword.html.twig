{% extends 'base.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block body %}
{% include 'header.html.twig' %}
<div class="mx-4">
    <p class="mb-5">Réinitialiser votre mot de passe ici!</p>
    {{ form_start(form) }}
        <div class="text-danger">{{ form_errors(form) }}</div>
        <div class="form-group">
            <div class="text-danger">{{ form_errors(form.password.first) }}</div>
            {{ form_label(form.password.first) }}
            <div>{{ form_widget(form.password.first, { 'attr': {'class': 'form-control'} }) }}</div>
            <small class="form-text text-muted">{{ form_help(form.password.first) }}</small>
        </div>
        <div class="form-group">
            {{ form_label(form.password.second) }}
            <div>{{ form_widget(form.password.second, { 'attr': {'class': 'form-control'} }) }}</div>
            <small class="form-text text-muted">{{ form_help(form.password.second ) }}</small>
        </div>
        <button class="btn btn-primary" type="submit">Modifiez</button>
    {{ form_end(form) }}
</div>
{% include 'footer.html.twig' %}
{% endblock %}