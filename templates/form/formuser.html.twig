{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% include 'header.html.twig' %}
    <article class="mx-4 mb-4 article-register">
        <h3 class="my-5">Inscrivez vous ici!</h3>
        {{ form_start(form) }}
            <section class="text-danger">{{ form_errors(form) }}</section>
            <section class="form-group">
                <div class="text-danger">{{ form_errors(form.pseudo) }}</div>
                {{ form_label(form.pseudo) }}
                <div>{{ form_widget(form.pseudo, { 'attr': {'class': 'form-control'} }) }}</div>
                <small class="form-text text-muted">{{ form_help(form.pseudo) }}</small>
            </section>
            <section class="form-group">
                <div class="text-danger">{{ form_errors(form.email) }}</div>
                {{ form_label(form.email) }}
                <div>{{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}</div>
                <small class="form-text text-muted">{{ form_help(form.email) }}</small>
            </section>
            <section class="form-group">
                <div class="text-danger">{{ form_errors(form.password.first) }}</div>
                {{ form_label(form.password.first) }}
                <div>{{ form_widget(form.password.first, { 'attr': {'class': 'form-control'} }) }}</div>
                <small class="form-text text-muted">{{ form_help(form.password.first) }}</small>
            </section>
            <section class="form-group">
                {{ form_label(form.password.second) }}
                <div>{{ form_widget(form.password.second, { 'attr': {'class': 'form-control'} }) }}</div>
                <small class="form-text text-muted">{{ form_help(form.password.second) }}</small>
            </section>
            <section class="form-group">
                <div class="text-danger">{{ form_errors(form.avatar) }}</div>
                {{ form_label(form.avatar) }}
                <div>{{ form_widget(form.avatar) }}</div>
                <small class="form-text text-muted">{{ form_help(form.avatar) }}</small>
            </section>
            <button class="btn btn-primary " type="submit">Inscrivez vous</button>
        {{ form_end(form) }}
    </article>
    <footer class="text-white bg-primary card-group button-register">
        <div class="card-body">
            <p>Bienvenue sur SnowTricks, le site qui r√©pertorie les differents tricks du Snowboard, vous pouvez voir nos tricks <a class="text-dark" href="/#trick">ici</a></p>
        </div>
        <div class="card-body">     
            {% if app.user %}
                <a class="text-dark" href="{{ path('app_logout') }}">Deconnexion</a>
            {% else %}
                <a class="text-dark" href="{{ path('app_login') }}">Connexion</a>
            {% endif %}
        </div>
    </footer>
{% endblock %}