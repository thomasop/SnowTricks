{% extends 'base.html.twig' %}

{% block title %}Suppression d'un trick{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
{% include 'header.html.twig' %}
<div class="trick-delete mx-4">
    <h3 class="my-5">Suppression d'un trick</h3>
    <p class="">Nom : {{ trick.name }}</p>
    <p>Description : {{ trick.description }}</p>
    <div>
        <p>Image principale :</p>
        <img class="" width="200" height="125" src="/uploads/pictures/{{ trick.picture }}" alt="Trick">
    </div>
    <div class="d-flex flex-column">
        <p class="mt-3">Images secondaires :</p>
        <div class="d-flex flex-wrap">
            {% if trick.images %}
                {% if trick.images|length > 0 %}
                    {% for okk in trick.images %}
                        <div class="mx-2">
                            <img class="" width="200" height="125" src="/uploads/pictures/{{ okk.name }}" alt="Trick">
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Aucune image secondaire</p>
                {% endif %}
            {% endif %}
        </div>
        <p class="mt-3">Videos :</p>
        <div class="d-flex flex-wrap">
            {% if trick.videos %}
                {% if trick.videos|length > 0 %}
                    {% for ok in trick.videos %}
                        <div class="mx-2">
                            <iframe width="200" height="125"
                                src="{{ ok.url }}">
                            </iframe>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Aucune video</p>
                {% endif %}
            {% endif %}
        </div>
    </div>
    <div class="mt-4">
        <p>Voulez vous vraiment supprimer ce trick?</p>
        <a class="btn btn-danger mb-4" href="{{ path('delete_trick', {slug: trick.slug}) }}">oui</a>
        <a class="btn btn-primary mb-4" href="http://localhost:8000/#trick">non</a>
    </div>
</div>
{% endblock %}