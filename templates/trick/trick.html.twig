{% extends 'base.html.twig' %}

{% block title %}Suppression d'un trick{% endblock %}

{% block body %}
{% for message in app.flashes('success') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
{% include 'header.html.twig' %}
<div class="trick-delete mx-4">
    <p class="">Nom: {{ trick.name }}</p>
    <p>Description: {{ trick.description }}</p>
    <div>
        <p>Image principale</p>
        <img class="" width="200" height="125" src="/uploads/pictures/{{ trick.picture }}" alt="Trick">
    </div>
    <div class="d-flex flex-column">
        <p>Images secondaires</p>
        <div class="d-flex wrap">
            {% if trick.images %}
                {% for okk in trick.images %}
                    <div class="mx-2">
                        <img class="" width="200" height="125" src="/uploads/pictures/{{ okk.name }}" alt="Trick">
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <p>Videos</p>
        <div class="d-flex wrap">
            {% if trick.videos %}
                {% for ok in trick.videos %}
                    <div class="mx-2">
                        <iframe width="200" height="125"
                            src="{{ ok.url }}">
                        </iframe>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <div class="mt-3">
            <p>Voulez vous vraiment supprimer ce trick?</p>
            <a class="btn btn-primary" href="{{ path('delete_trick', {slug: trick.slug}) }}">oui</a></li>
            <a class="btn btn-primary" href="http://localhost:8000/#trick">non</a></li>
        </div>
    {% endif %}
</div>
{% include 'footer.html.twig' %}
{% endblock %}