{% extends 'base.html.twig' %}

{% block title %}user{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% include 'header.html.twig' %}
    <article class="users-page">
        {% for u in user%}
            <section class="border-bottom mx-4">
                <p>{{ u.pseudo }}</p>
                <p>{{ u.email }}</p>
                <div class="d-flex">
                    <p class="mr-2">Compte valid√©?</p>
                    {% if u.enabled == true %}
                        <p>oui</p>
                    {% else %}
                        <p>non</p>
                    {% endif %}
                </div>
                <div class="d-flex flex-column">
                    <img class="" src="/uploads/pictures/{{ u.avatar }}" alt="Trick" width="80" height="80">
                    <div>
                        <a class="btn btn-primary my-3" href="{{ path('user_delete', {id: u.id}) }}">Supprimez</a>
                    </div>
                </div>
            </section>
        {% endfor %}
    </article>
{% endblock %}